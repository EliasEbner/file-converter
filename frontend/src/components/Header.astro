---
import Link from "./Link.astro";
---

<header
  class="w-full h-20 flex flex-row justify-between items-center px-6 sm:px-8 md:px-10 lg:px-12 border-b border-b-neutral"
>
  <a href="/">
    <div
      class="flex flex-row gap-4 text-primary items-center hover:scale-110 duration-1000 ease-out"
    >
      <ion-icon name="document" class="text-3xl"></ion-icon>
      <h2 class="text-2xl text-primary font-bold">Mutatio</h2>
    </div>
  </a>
  <nav class="w-1/3 flex-row justify-around md:flex hidden">
    <Link href="/">Home</Link>
    {/* <Link href="/blog">Blog</Link> */}
    <Link href="/about-us">About Us</Link>
    <Link href="/faq">FAQs</Link>
  </nav>
  <button
    id="nav-hamburger"
    class="z-30 text-4xl text-font-secondary md:hidden block"
  >
    <ion-icon name="menu-outline"></ion-icon>
  </button>
  <div
    id="modal-background"
    class="md:hidden bg-black -z-10 opacity-0 block duration-300 ease-in-out fixed inset-0"
  >
  </div>
  <div
    id="modal-menu"
    class="md:hidden fixed z-20 duration-300 ease-in-out -right-full bg-font-light w-[62vw] inset-y-0 pt-24"
  >
    <nav class="flex-col justify-around md:hidden flex text-lg font-medium">
      <a
        class="border-b border-b-neutral p-4 flex flex-row justify-between items-center"
        href="/"
      >
        <span>Home</span>
        <ion-icon
          name="chevron-forward-outline"
          class="text-2xl text-font-secondary first-chevron duration-500 ease-in-out"
        ></ion-icon>
      </a>
      {/* <Link href="/blog">Blog</Link> */}
      <a
        class="border-b border-b-neutral p-4 flex flex-row justify-between items-center"
        href="/about-us"
      >
        <span>About Us</span>
        <ion-icon
          name="chevron-forward-outline"
          class="text-2xl text-font-secondary first-chevron duration-500 ease-in-out"
        ></ion-icon>
      </a>
      <a
        class="border-b border-b-neutral p-4 flex flex-row justify-between items-center"
        href="/faq"
      >
        <span>FAQs</span>
        <ion-icon
          name="chevron-forward-outline"
          class="text-2xl text-font-secondary first-chevron duration-500 ease-in-out"
        ></ion-icon>
      </a>
    </nav>
  </div>
</header>
<style></style>
<script>
  const navHamburger: HTMLButtonElement | null = document.getElementById(
    "nav-hamburger",
  ) as HTMLButtonElement | null;
  const modalBackground: HTMLDivElement | null = document.getElementById(
    "modal-background",
  ) as HTMLDivElement | null;
  const modalMenu: HTMLDivElement | null = document.getElementById(
    "modal-menu",
  ) as HTMLDivElement | null;

  function toggleNavModal() {
    modalBackground?.classList.toggle("-z-10");
    modalBackground?.classList.toggle("z-10");
    modalBackground?.classList.toggle("opacity-20");
    modalBackground?.classList.toggle("opacity-0");
    modalMenu?.classList.toggle("right-0");
    modalMenu?.classList.toggle("-right-full");
  }

  navHamburger?.addEventListener("click", toggleNavModal);
  modalBackground?.addEventListener("click", toggleNavModal);
</script>
