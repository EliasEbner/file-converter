---
const { onclick, id, disabled } = Astro.props;
---

<button
  id={id}
  disabled={disabled}
  class={`
    focus:outline-none
    bg-primary
    duration-200
    ease-in-out
    rounded-4xl
    px-8
    h-10
    text-font-light
    text-lg
    font-bold
    hover:scale-110
    active:scale-95
    cursor-pointer
  `}
  onclick={onclick}
>
  <slot />
</button>
